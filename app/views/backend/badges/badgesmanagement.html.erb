<!-- If Badge Added Successfuly -->

    <% if flash[:success] %>

        <script type="text/javascript">

        $(document).ready(function()
        {
            swal("Success!", "Your badge has been added.", "success");
        });


        </script>

    <% end %> 


<% if flash[:updated] %>

        <script type="text/javascript">

        $(document).ready(function()
        {
            swal("Success!", "Your badge has been updated.", "success");
        });


        </script>

    <% end %> 



