<section class="cd-wrapper">
    
    <div class="signup-sec crd-gb-style">
        <div class="top-icon">
            <%= image_tag('sign_up_icon.png', :alt => 'Login') %>
        </div>
    
<!--   Start Signup Form     -->
        
	<%= form_for :signup, :url => user_signup_path, :html => {:multipart => 'true', :id => 'signupform', :name => 'signupform'} do |f| %>
        
        
        <!-- If Email Already Existed -->

			<% if flash[:alert] %>

				<script type="text/javascript">

				$(document).ready(function()
				{
					alert('<%= flash[:alert] %>');
				});
									

				</script>
				
		    <% end %> 
        
        
        
		<div class="form-group">
			<i class="fa fa-user"></i>
            
            <%= f.text_field :name, id: 'name', placeholder: 'Name', class: 'form-control', :data => { :validate => 'required' } %>
            
		</div>
        
		<div class="form-group">
			<i class="fa fa-user"></i>
            
            <%= f.text_field :username, id: 'username', placeholder: 'Username', class: 'form-control', :data => { :validate => 'required,alphanumeric' } %>
		</div>
        
		<div class="form-group">
			<i class="fa fa-envelope"></i>
            
            <%= f.text_field :useremail, id: 'useremail', placeholder: 'Email Address', class: 'form-control', :data => { :validate => 'required,email' } %>
            
		</div>
        
		<div class="form-group">
			<i class="fa fa-unlock-alt"></i>
            
            <%= f.password_field :userpassword, id: 'userpassword', placeholder: 'Password', class: 'form-control', :data => { :validate => 'required' } %>
		</div>
        
		<div class="form-group">
			<i class="fa fa-unlock-alt"></i>
            
            <%= f.password_field :cpassword, id: 'cpassword', placeholder: 'Confirm Password', class: 'form-control', :data => { :validate => 'required,checkPassword' }  %>
		</div>
	
	
		
        <div class="bott-wrap-sec">
            <h5>Please click on the image (anti-spam test) </h5>
            
            <ul class="bott-list">
                <li><a href="javascript:;"><%= image_tag('fish_img.png', :alt => 'Fish') %></a></li>
                <li><a href="javascript:;"><%= image_tag('cam_icon.png', :alt => 'Camera') %></a></li>
                <li><a href="javascript:;"><%= image_tag('lock_icon.png', :alt => 'Lock') %></a></li>
                <li><a href="javascript:;"><%= image_tag('bt_fly_img.png',:alt => 'Butterfly') %></a></li>
            </ul>
            
            <div class="form-group">
                <label class="checkbox-wrapper">
                    
                    <%= f.check_box :agree, id: 'chk-bx-23', class: 'chk-box', value: 'agree', :data => { :validate => 'agreement' } %>
                    
                    <i class="input-helper"></i>I agree to the Dalendo terms of service
                </label>
            </div>



            <div class="btn-sec text-center">

                
                <%#= f.button :SignUp, :class => 'btn btn-login text-uppercase sign-btn-mx', :id => 'usersignup', :type => 'button', :data => { :toggle => 'modal', :target => '#mysignupModal' } %>
                
                
                <%= f.button :SignUp, :class => 'btn btn-login text-uppercase sign-btn-mx', :id => 'usersignup', :type => 'button' %>
                
            </div>

        </div>
        
    <% end %>   <!--   End Signup Form     -->
        
        
        <div class="rest-links">
            <ul>
                <li><a href="javascript:;">Already have an Account</a></li>
                <li><a href="signin">Login</a></li>
            </ul>
        </div>
        
    </div>
</section>





