                        <% project_image = project_data_by_catid['project_image'] %>
                
                
                            <!--Code checking for project-image-->

                            <% project_image = project_data_by_catid['project_image'] %>
                
                            <% if File.exist?(Rails.root.join('app','assets','images','project','projectimages',project_image )) %>
                                <% projectimage = project_image  %>
                
                            <% end %>

                            <!--Code checking for project-image end-->
			
			
