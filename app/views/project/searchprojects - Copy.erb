                                <ul>
                                    <li>
                                        <figure><i class="icon-rich"></i></figure>
                                        <h5>72%</h5>
                                        <p>Funded</p>
                                    </li>
                                    <li>
                                        <figure><i class="icon-piggy-bank"></i></figure>
                                        <h5>$50,0000</h5>
                                        <p>Pledged</p>
                                    </li>
                                    <li>
                                        <figure><i class="icon-clock"></i></figure>
                                        <h5>150 Hours</h5>
                                        <p>Restant</p>
