<div class="container iner-control">
	<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
	<div class="payment-box-outer">
		<div class="payment-title">
			<h2>pay with credit card</h2>
		</div>
		<div class="payment-box-inside">
		
			<div class="row payment-icon-outer">
				<div class="col-xs-12 col-sm-12 col-md-12">
				<h5>The following credit cards are accepted:</h5>
				<ul>
					<li><figure><%= image_tag('card-method-1.png', :alt => 'Payment') %></figure></li>
					<li><figure><%= image_tag('card-method-2.png', :alt => 'Payment') %></figure></li>
					<li><figure><%= image_tag('card-method-3.png', :alt => 'Payment') %></figure></li>
